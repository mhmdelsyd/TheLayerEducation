@model Lesson

@if(Model is null)
{
    <p class="alert-danger">No Lesson Found</p>
    <a asp-action="GetAllLessons">Lessons Menu</a>
}
else
{
    <div>
        <h2>@Model.LessonName</h2>
        <div class="d-flex gap-5">
            <div class="video-container w-50 me-3">
                <iframe width="100%" height="360" src="@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
            </div>

            <div class="pdf-container w-50">
                <embed src="@Model.PdfUrl" class="w-100" type="application/pdf" width="100%" height="600px">
            </div>
        </div>
        <div class="d-flex gap-4">
            <a asp-action="EditLesson" asp-route-id="@Model.LessonId" class="btn btn-success">Edit</a>
            <a asp-action="GetAllLessons" class="btn btn-secondary">Menu</a>
        </div>
    </div>
}