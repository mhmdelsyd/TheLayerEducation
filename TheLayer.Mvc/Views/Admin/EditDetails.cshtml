@model EditModelView

<form asp-action="EditDetails" method="post">
    <h2>Create a new account.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating mb-3 ">

                <div class="form-floating">
                    <input asp-for="@Model.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="first name" />
                    <label asp-for="@Model.FirstName">First Name</label>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="last name" />
                    <label asp-for="@Model.LastName"></label>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>

            </div>
            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control"  />
                <label asp-for="@Model.Email"></label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
            </div>
        </div>
        <div class="col-6 d-flex flex-column align-items-center">
            <div>
                @if (Model.Photo is null || Model.Photo.Length == 0)
                {
                    <img id="profile" width="75" class="rounded-5" alt=@(Model.FirstName +" " + Model.LastName+" Photo")
                            src="/images/Profile.png" />
                }
                else
                {
                    <img id="profile" width="75" class="rounded-5"
                            alt=@(Model.FirstName +" " + Model.LastName+" Photo")
                            src="data:image/*;base64,@(Convert.ToBase64String(Model.Photo))" />
                }
            </div>
            <div class="custom-file">
                <input
                    type="file"
                    name="Photo"
                    accept="image/*"
                    asp-for="@Model.Photo"
                    class="custom-file-input"
                    onchange="document.getElementById('profile').src = window.URL.createObjectURL(this.files[0])"
                    />
                <label asp-for="@Model.Photo" class="custom-file-label">Choose File....</label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>