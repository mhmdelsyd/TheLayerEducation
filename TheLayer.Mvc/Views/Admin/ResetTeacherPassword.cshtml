@model ResetTeacherPasswordModelView

<form method="post" asp-action="ResetTeacherPassword" class="form">
    <div class="form-floating mb-3">
        <input asp-for="@Model.TeacherEmail" class="form-control" placeholder="name@example.com" />
        <label asp-for="@Model.TeacherEmail" class="form-label"></label>
        <span asp-validation-for="@Model.TeacherEmail" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.TeacherPassword" class="form-control" placeholder="Password" />
        <label asp-for="@Model.TeacherPassword" class="form-label"></label>
        <span asp-validation-for="@Model.TeacherPassword" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
        <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Reset</button>
    </div>
</form>