
@model CreateTeacherModelView

@{
    ViewData["Title"] = "Create Teacher";
    SelectList courses = new SelectList(ViewBag.courses,"Id","Name");
}

<div class="d-flex align-items-center justify-content-center">
    <div class="w-25">
        <form id="registerForm" asp-action="CreateTeacher" method="post">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 d-flex justify-content-between gap-2">
                <div class="form-floating">
                    <input asp-for="@Model.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="first name"  />
                    <label asp-for="@Model.FirstName">First Name</label>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="last name" />
                    <label asp-for="@Model.LastName"></label>
                </div>
            </div>
                <div class="form-select">
                    <label asp-for="@Model.Course"></label>
                    <select asp-items="courses" asp-for="@Model.Course"></select>
                </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
        </form>
    </div>
</div>